{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["esnext", "dom"],
		"types": ["@dcloudio/types", "node"],
		"typeRoots": ["./src/@types", "./node_modules/@types", "./node_modules"]
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite/**/*.ts"]
}
